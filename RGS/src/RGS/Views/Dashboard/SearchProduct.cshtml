@model ViewModels.Models.ProductListViewModel
@{
    ViewData["Title"] = "SearchProduct";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Search Results</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @{
                var modelData = Model.productViewModels.OrderByDescending(x => x.ProductId);
                foreach (var item in modelData)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="@item.ImageUrl" onclick='window.location.href = "/Shop/ShopDetails?Id=@item.ProductId&Cid=@item.CategoryId";' style="cursor:pointer;">
                                <ul class="product__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6><a href="#">@item.ProductName</a></h6>
                                <h5>₹@item.ProductPrice</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

